<header class="page-header">
    <h1>Signup</h1>
</header>

<%= form_for :user, url: '/users',  html: { class: "form" }  do |f| %>

    <div class="mb-3">
        <%= f.label :name, class: "form-label small-font" %>
        <%= f.text_field :name, class: "form-control small-font", style: "width: 400px" %>
    </div>

    <div class="mb-3">
        <%= f.label :email, class: "form-label small-font" %>
        <%= f.text_field :email, class: "form-control small-font", style: "width: 400px" %>
    </div>

    <div class="mb-3">
        <%= f.label :password, class: "form-label small-font" %>
        <%= f.password_field :password, class: "form-control small-font", style: "width: 400px" %>
    </div>

    <div class="mb-3">
        <%= f.label :password_confirmation, "Password Confirmation", class: "form-label small-font" %>
        <%= f.password_field :password_confirmation, class: "form-control small-font", style: "width: 400px" %>
    </div>
    
    <%= f.submit "Submit", class: "btn btn-primary" %>

<% end %>