<header class="page-header">
  <h1>Login</h1>
</header>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>


<%= form_tag '/login' do %>
  <div class="mb-3">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: "form-control", style: "width: 400px" %>
  </div>
  <div class="mb-3">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control", style: "width: 400px" %>
  </div>
  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>